---
export interface Props {
    href?: string;        // link to the store (omit when coming soon)
    logoSrc: string;      // e.g. /logos/amazon.svg
    logoAlt: string;      // e.g. "Amazon"
    label: string;        // e.g. "Buy on Amazon"
    comingSoon?: boolean; // show badge, disable link
}

const { href, logoSrc, logoAlt, label, comingSoon = false } = Astro.props;
const isLink = !!(href && !comingSoon);
---

<div class="store-card">
    <img class="store-logo" src={logoSrc} alt={logoAlt} loading="lazy" decoding="async" />
    <div class="store-body">
        <p class="store-name">{logoAlt}</p>

        {isLink ? (
                <a
                        class="store-cta"
                        href={href}
                        rel="noopener noreferrer"
                        target="_blank"
                        aria-label={label}
                >
                    {label}
                </a>
        ) : (
                <div class="store-cta disabled">Coming soon</div>
        )}
    </div>

    {comingSoon && <span class="badge">Coming soon</span>}
</div>
